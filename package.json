{
  "name": "snapdock",
  "version": "2.1.0",
  "buildStage": "Beta",
  "releaseDate": "2025-12-17",
  "description": "SnapDock â€” lightweight markdown editor with file tree, recent files, and dynamic preview.",
  "author": "ZetoLabs",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "bundle": "node build.js",
    "pack": "electron-packager . SnapDock --platform=win32 --arch=x64 --out=dist --icon=assets/icon.ico",
    "build": "npm run bundle && electron-builder",
    "lint": "echo \"Add ESLint later\""
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.27.1",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.zetolabs.snapdock",
    "productName": "SnapDock",
    "files": [
      "dist/**/*",
      "index.html",
      "src/**/*",
      "assets/**/*",
      "main.js"
    ],
    "win": {
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ZFordDev",
        "repo": "SnapDock"
      }
    ]
  }
}
